{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_c",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/src/*.c",
                "-c",
                "-o",
                "${workspaceFolder}/obj/c_obj.o",
                "-Wall",
                "-Wextra",
                "-O2"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build_cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/src/*.cpp",
                "-c",
                "-o",
                "${workspaceFolder}/obj/cpp_obj.o",
                "-Wall",
                "-Wextra",
                "-O2",
                "-std=c++17"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build_all",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build_c",
                "build_cpp"
            ],
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/obj/*.o",
                "-o",
                "${workspaceFolder}/bin/my_app"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}